[Unit]
Description=Gunicorn instance to serve rowing club Website project
After=network.target

[Service]
User=ubuntu
Group=www-data
WorkingDirectory=/home/ubuntu/RowingClubWebsite/Website
Environment="PATH=/home/ubuntu/RowingClubWebsite/Website/website_venv/bin"
# ExecStart=/home/ubuntu/RowingClubWebsite/Website/website_venv/bin/gunicorn --workers 3 --bind unix:Website.sock -m 007 wsgi:app
ExecStart=/home/ubuntu/RowingClubWebsite/Website/website_venv/bin/gunicorn -w 4 -b 0.0.0.0:8000 'wsgi:app' --keyfile private_key.pem --certfile certificate.pem

[Install]
WantedBy=multi-user.target
